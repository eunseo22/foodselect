<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나는 어디까지 가능?"
            android:textSize="25sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="15dp"/>

        <Button
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:background="#FFFFFF"
            android:text="Level 1. 편의점까지"
            android:textSize="20sp"
            android:textColor="#000"
            android:gravity="center"/>
        <Button
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:background="#FFFFFF"
            android:text="Level 2. 학생식당까지"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginTop="10dp"/>
        <Button
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:background="#FFFFFF"
            android:text="Level 3. 패스트푸드까지"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginTop="10dp"/>
        <Button
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:background="#FFFFFF"
            android:text="Level 4. 분식집까지"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginTop="10dp"/>
        <Button
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:background="#FFFFFF"
            android:text="Level 5. 일반음식점까지"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginTop="10dp"/>
        <Button
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:background="#FFFFFF"
            android:text="Level 6. 맛집까지"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginTop="10dp"/>
        <Button
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:background="#FFFFFF"
            android:text="Level 7. 패밀리레스토랑까지"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginTop="10dp"/>
        <Button
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:background="#FFFFFF"
            android:text="Level 8. 고깃집/횟집까지"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginTop="10dp"/>
        <Button
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:background="#FFFFFF"
            android:text="Level 9. 술집까지"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</FrameLayout>